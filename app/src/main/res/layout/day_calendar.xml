<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frameLayoutBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv2_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv3_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv4_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv5_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv6_bg"
                style="@style/tvStyle"
                android:visibility="visible"
                android:background="@drawable/tv_bg"
                tools:text="" />

            <TextView
                android:id="@+id/tv7_bg"
                style="@style/tvStyle"
                android:background="@drawable/tv_bg"
                tools:text="" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                style="@style/tvStyle"
                android:textColor="@color/colorSundayAndSaturday"
                tools:text="1" />

            <TextView
                android:id="@+id/tv2"
                style="@style/tvStyle"
                tools:text="2" />

            <TextView
                android:id="@+id/tv3"
                style="@style/tvStyle"
                tools:text="3" />

            <TextView
                android:id="@+id/tv4"
                style="@style/tvStyle"
                tools:text="4" />

            <TextView
                android:id="@+id/tv5"
                style="@style/tvStyle"
                tools:text="5" />

            <TextView
                android:id="@+id/tv6"
                style="@style/tvStyle"
                tools:text="6" />

            <TextView
                android:id="@+id/tv7"
                style="@style/tvStyle"
                android:textColor="@color/colorSundayAndSaturday"
                tools:text="7" />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>
